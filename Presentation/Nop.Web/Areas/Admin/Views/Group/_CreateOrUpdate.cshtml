@model GroupModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<div class="content">
    <div class="form-horizontal">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="Name" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Name" />
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="AvatarId" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="AvatarId" />
                                <span asp-validation-for="AvatarId"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="CoveId" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="CoveId" />
                                <span asp-validation-for="CoveId"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="isApproval" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="isApproval" />
                                <span asp-validation-for="isApproval"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>