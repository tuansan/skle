@model PostModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Catalog.Post.EditDetails").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Posts");
}

<form asp-controller="Post" asp-action="EditPost" method="post" id="Post-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Catalog.Post.EditDetails") 
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="ListPost">@T("Admin.Catalog.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="Post-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-action="DeletePost" asp-model-id="@Model.Id" asp-button-id="Post-delete" />