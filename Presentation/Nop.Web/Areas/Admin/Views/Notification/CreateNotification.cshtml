@model NotificationModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Catalog.Notification.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Notifications");
}

<form asp-controller="Notification" asp-action="CreateNotification" method="post" id="Notification-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Catalog.Notification.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="ListNotification">@T("Admin.Catalog.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>